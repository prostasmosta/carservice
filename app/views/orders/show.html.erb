<%= render 'order', order: @order %>
<div class="mt-4">
  <%= link_to t('views.edit'), edit_order_path(@order),
              class: 'btn btn-success' %>
  <%= t('views.or') %>
  <%= link_to t('views.back'), :back %>
</div>
<div class="mt-4">
  <%= button_to t('views.destroy'), order_path(@order),
                method: :delete,
                form: { data: { turbo_confirm: t('views.delete_confirm') } },
                class: 'btn btn-danger' %>
</div>
